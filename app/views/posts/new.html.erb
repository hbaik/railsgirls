<h1>Make A Post</h1>

<%= form_for @post do |f| %>

  <div class="form-section">
   <%= f.label :user_id %>
   <%= f.select :user_id, options_for_select(@user_list) %>
  </div>

  <div class="form-section">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
 
  <div class="form-submit">
    <%= f.submit 'Post It!', :class => "btn btn-danger"  %>
  </div>

<% end -%>
